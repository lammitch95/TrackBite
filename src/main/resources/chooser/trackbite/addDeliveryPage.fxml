<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>



<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="chooser.view.addDeliveryController"
            prefHeight="500.0" prefWidth="1000.0">

   <children>

      <!-- Container for dynamic delivery rows -->
      <VBox fx:id="deliveryItemsContainer" layoutX="20" layoutY="20" spacing="10" prefWidth="960" prefHeight="400" />

      <!-- Add Row Button -->
      <Button text="Add Item"
              layoutX="20" layoutY="430"
              onAction="#handleAddItemRow"
              prefWidth="100" />

      <!-- Submit Button -->
      <Button text="Submit Deliveries"
              layoutX="140" layoutY="430"
              onAction="#handleSubmitDeliveries"
              prefWidth="150" />

      <!-- Back Button -->
      <Button fx:id="backToMain"
              text="Back to Main Menu"
              layoutX="310" layoutY="430"
              onAction="#backToMainSelected"
              prefWidth="150" />

   </children>
</AnchorPane>

